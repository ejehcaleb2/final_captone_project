# Example environment variables for the Course Enrollment Platform
# Copy this file to `.env` and fill in real values (do NOT commit `.env`)

# Database (PostgreSQL)
# Example: postgresql://user:password@host:5432/dbname
DATABASE_URL=postgresql://postgres:password@localhost:5432/course_enrollment_db

# JWT
SECRET_KEY=replace-with-a-secure-random-string
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=60

# App environment
ENVIRONMENT=development

# Optional: enable automatic alembic migrations at startup (set to true in production with care)
# AUTO_MIGRATE=false
